<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Club Smart</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <script src="https://js.stripe.com/v3/"></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Bootstrap JS -->


</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/images/logo.png" alt="Club Smart Logo" width="40">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Clubes" class="nav-link">Clubes</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="About" class="nav-link">About</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Events" class="nav-link">Events</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Carrito" asp-action="Index" class="nav-link">
                            <i class="bi bi-cart"></i> Carrito
                        </a>
                    </li>

                    @if (Context.Session.GetString("AdminEmail") != null)
                    {
                        <!-- Admin-Specific Links -->
                        <li class="nav-item">
                            <a asp-controller="Admin" asp-action="Panel" class="nav-link"><i class="bi bi-speedometer2"></i> Admin Panel</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Notificaciones" asp-action="Crear" class="nav-link"><i class="bi bi-envelope"></i> Crear Notificación</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Admin" asp-action="Logout" class="nav-link text-danger"><i class="bi bi-box-arrow-right"></i> Cerrar Sesión</a>
                        </li>
                    }
                    else if (Context.Session.GetString("UsuarioEmail") != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @Context.Session.GetString("UsuarioEmail")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Dashboard"><i class="bi bi-house-door"></i> Dashboard</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="CatalogoLugares"><i class="bi bi-search"></i> Consultar Disponibilidad</a></li>
                                <li><a class="dropdown-item" asp-controller="Reservacion" asp-action="ConsultarReservas"><i class="bi bi-calendar"></i> Consultar Reservas</a></li>
                                <li><a class="dropdown-item text-danger" asp-controller="Usuario" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Cerrar Sesión</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Login Options -->
                        <li class="nav-item">
                            <a asp-controller="Usuario" asp-action="Login" class="nav-link"><i class="bi bi-person"></i> Login Usuario</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            cargarNotificaciones();

            async function cargarNotificaciones() {
                try {
                    const response = await fetch('/Notificacion/ObtenerNotificaciones');
                    const data = await response.json();

                    if (data.success) {
                        const notificaciones = data.notificaciones;
                        const notificationList = document.getElementById('notificationList');
                        const notificationCount = document.getElementById('notificationCount');

                        // Limpia la lista de notificaciones
                        notificationList.innerHTML = '';

                        if (notificaciones.length > 0) {
                            notificationCount.textContent = notificaciones.length;

                            notificaciones.forEach(n => {
                                const li = document.createElement('li');
                                li.innerHTML = `<a class="dropdown-item" href="#" onclick="marcarComoLeida(${n.NotificacionId})">
                                                ${n.Mensaje} <br><small>${new Date(n.Fecha).toLocaleString()}</small>
                                            </a>`;
                                notificationList.appendChild(li);
                            });
                        } else {
                            notificationCount.textContent = '0';
                            notificationList.innerHTML = `<li><a class="dropdown-item text-center">No tienes notificaciones</a></li>`;
                        }
                    }
                } catch (error) {
                    console.error('Error cargando notificaciones:', error);
                }
            }


            window.marcarComoLeida = async function (id) {
                try {
                    const response = await fetch('/Notificacion/MarcarComoLeida', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ id })
                    });
                    const data = await response.json();
                    if (data.success) {
                        cargarNotificaciones(); // Recargar la lista de notificaciones
                    }
                } catch (error) {
                    console.error('Error marcando como leída:', error);
                }
            };
        });
    </script>

</body>
</html>
