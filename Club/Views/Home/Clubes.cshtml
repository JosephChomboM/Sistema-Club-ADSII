@model IEnumerable<Club.Models.Lugar>

@{
    ViewData["Title"] = "Clubes";
}

<h2>Clubes:</h2>

<div class="row">
    @foreach (var club in Model)
    {
        <div class="col-md-4 text-center mb-4">
            <div class="card h-100">
                <img src="@club.LogoUrl" alt="@club.Nombre" class="card-img-top" style="max-height: 150px; object-fit: contain;" />
                <div class="card-body">
                    <h5 class="card-title">@club.Nombre</h5>
                    <a asp-action="DetalleClub" asp-route-id="@club.LugarId" class="btn btn-primary">Ver Detalle</a>
                </div>
            </div>
        </div>
    }
</div>
