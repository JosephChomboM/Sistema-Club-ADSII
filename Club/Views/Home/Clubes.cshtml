@model IEnumerable<Club.Models.Lugar>

@{
    ViewData["Title"] = "Clubes";
}
<head>
    <!-- Vínculo correcto al archivo CSS -->
    <link rel="stylesheet" href="/css/clubsmart.css" />
</head>

<div class="clubsmart-page">
    <div class="clubsmart-container">
        <h2 class="clubsmart-header">Clubes:</h2>

        <div class="row">
            @foreach (var club in Model)
            {
                <div class="col-md-4 text-center mb-4">
                    <!-- Tarjeta personalizada -->
                    <div class="clubsmart-card h-100">
                        <img src="@club.LogoUrl" alt="@club.Nombre" class="clubsmart-image" style="max-height: 150px; object-fit: contain;" />
                        <div class="clubsmart-card-body">
                            <h5 class="clubsmart-subheader">@club.Nombre</h5>
                            <a asp-action="DetalleClub" asp-route-id="@club.LugarId" class="clubsmart-btn clubsmart-btn-primary">
                                Ver Detalle
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
