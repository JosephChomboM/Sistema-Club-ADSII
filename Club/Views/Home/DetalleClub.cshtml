@model Club.Models.Lugar

@{
    ViewData["Title"] = Model.Nombre;
}
<head>
    <!-- Vínculo correcto al archivo CSS -->
    <link rel="stylesheet" href="/css/clubsmart.css" />
</head>

<div class="clubsmart-page">
    <div class="clubsmart-container">
        <div class="row">
            <!-- Información del lugar -->
            <div class="col-md-6">
                <h2 class="clubsmart-header">@Model.Nombre</h2>
                <p class="clubsmart-paragraph">@Model.Descripcion</p>
                <ul class="clubsmart-list">
                    <li><strong>Dirección:</strong> @Model.Direccion</li>
                </ul>
            </div>

            <!-- Imagen del lugar -->
            <div class="col-md-6 text-center">
                <img src="@Model.LogoUrl" alt="@Model.Nombre" class="img-fluid clubsmart-image" />
            </div>
        </div>
    </div>
</div>
