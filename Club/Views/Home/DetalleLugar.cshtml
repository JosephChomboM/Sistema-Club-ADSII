@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Detalle de Lugar";
}

<head>
    <!-- Vínculo correcto al archivo CSS -->
    <link rel="stylesheet" href="/css/clubsmart.css" />
</head>

<div class="clubsmart-page">
    <div class="clubsmart-container">
        <h2 class="clubsmart-header">Espacios Disponibles en @ViewData["LugarNombre"]</h2>
        <p class="clubsmart-paragraph">@ViewData["LugarDireccion"]</p>

        <div class="row">
            @foreach (var espacio in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="clubsmart-card text-center">
                        <h5 class="clubsmart-subheader">@espacio.Nombre</h5>
                        <a asp-action="ConsultarDisponibilidad" asp-controller="Reservacion"
                       asp-route-espacioId="@espacio.EspacioId"
                           class="clubsmart-btn clubsmart-btn-primary">
                            Ver Disponibilidad
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
