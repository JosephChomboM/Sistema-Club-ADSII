@model IEnumerable<Club.Models.Lugar>

@{
    ViewData["Title"] = "Catálogo de Lugares";
}

<head>
    <!-- Vínculo correcto al archivo CSS -->
    <link rel="stylesheet" href="/css/clubsmart.css" />
</head>

<div class="clubsmart-page">
    <div class="clubsmart-container">
        <h2 class="clubsmart-header">Consultar Disponibilidad</h2>

        <div class="row">
            @foreach (var lugar in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="clubsmart-card">
                        <h5 class="clubsmart-subheader">@lugar.Nombre</h5>
                        <p class="clubsmart-paragraph">@lugar.Direccion</p>
                        <a asp-controller="Home" asp-action="DetalleLugar"
                       asp-route-id="@lugar.LugarId"
                           class="clubsmart-btn clubsmart-btn-primary">
                            Ver Detalle
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
