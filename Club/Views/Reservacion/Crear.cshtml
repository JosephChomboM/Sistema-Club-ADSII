@model Club.Models.CrearReservacionViewModel

@{
    ViewData["Title"] = "Registrar Reservación";
}

<h2>Registrar Reservación para @Model.EspacioNombre</h2>
<p>Desde: <strong>@Model.FechaInicio.ToString("yyyy-MM-dd HH:mm")</strong></p>
<p>Hasta: <strong>@Model.FechaFin.ToString("yyyy-MM-dd HH:mm")</strong></p>

<form asp-action="Agregar" asp-controller="Carrito" method="post">
    <input type="hidden" name="espacioId" value="@Model.EspacioId" />
    <input type="hidden" name="fechaInicio" value="@Model.FechaInicio" />
    <input type="hidden" name="fechaFin" value="@Model.FechaFin" />

    <button type="submit" class="btn btn-primary">Agregar al Carrito</button>
</form>
