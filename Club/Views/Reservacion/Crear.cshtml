@model Club.Models.CrearReservacionViewModel

@{
    ViewData["Title"] = "Registrar Reservación";
}

<head>
    <!-- Vínculo correcto al archivo CSS -->
    <link rel="stylesheet" href="/css/clubsmart.css" />
</head>

<div class="clubsmart-page">
    <div class="clubsmart-container">
        <div class="clubsmart-card text-center">
            <h2 class="clubsmart-header">Registrar Reservación para @Model.EspacioNombre</h2>

            <p class="clubsmart-paragraph">
                Desde: <strong>@Model.FechaInicio.ToString("yyyy-MM-dd HH:mm")</strong>
            </p>
            <p class="clubsmart-paragraph">
                Hasta: <strong>@Model.FechaFin.ToString("yyyy-MM-dd HH:mm")</strong>
            </p>

            <form asp-action="Agregar" asp-controller="Carrito" method="post" class="clubsmart-form">
                <input type="hidden" name="espacioId" value="@Model.EspacioId" />
                <input type="hidden" name="fechaInicio" value="@Model.FechaInicio" />
                <input type="hidden" name="fechaFin" value="@Model.FechaFin" />

                <button type="submit" class="clubsmart-btn clubsmart-btn-primary">
                    Agregar al Carrito
                </button>
            </form>
        </div>
    </div>
</div>
