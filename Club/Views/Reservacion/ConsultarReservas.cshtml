@model IEnumerable<Club.Models.Reservacion>

@{
    ViewData["Title"] = "Mis Reservas";
}

<head>
    <!-- Vínculo correcto al archivo CSS -->
    <link rel="stylesheet" href="/css/clubsmart.css" />
</head>

<div class="clubsmart-page">
    <div class="clubsmart-container">
        <h2 class="clubsmart-header">Mis Reservas</h2>

        <table class="clubsmart-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Espacio</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Total</th>
                    <th>Pago</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservacion in Model)
                {
                    <tr>
                        <td>@reservacion.ReservacionId</td>
                        <td>@reservacion.Espacio.Nombre</td>
                        <td>@reservacion.FechaInicio.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@reservacion.FechaFin.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>S/ @reservacion.Pago?.Total.ToString("F2")</td>
                        <td>
                            @if (reservacion.Pago != null)
                            {
                                <span class="clubsmart-badge-success">@reservacion.Pago.Estado</span>
                            }
                            else
                            {
                                <span class="clubsmart-badge-danger">Pendiente</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
