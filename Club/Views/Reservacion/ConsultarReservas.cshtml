@model IEnumerable<Club.Models.Reservacion>

@{
    ViewData["Title"] = "Mis Reservas";
}

<h2>Mis Reservas</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Espacio</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Total</th>
            <th>Pago</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservacion in Model)
        {
            <tr>
                <td>@reservacion.ReservacionId</td>
                <td>@reservacion.Espacio.Nombre</td>
                <td>@reservacion.FechaInicio.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@reservacion.FechaFin.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    S/ @reservacion.Pago?.Total.ToString("F2")
                </td>
                <td>
                    @if (reservacion.Pago != null)
                    {
                        <span class="badge bg-success"> @reservacion.Pago.Estado</span>
                    }
                    else
                    {
                        <span class="text-danger">Pendiente</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
