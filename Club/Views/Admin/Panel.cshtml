@model IEnumerable<Club.Models.Lugar>

@{
    ViewData["Title"] = "Administrar Clubes";
}

<h2>Administrar Clubes</h2>

<a asp-action="CrearClub" class="btn btn-success mb-3">Crear Nuevo Club</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Logo</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var club in Model)
        {
            <tr>
                <td>
                    <img src="@club.LogoUrl" alt="@club.Nombre" width="50" height="50" style="object-fit: contain;" />
                </td>
                <td>@club.Nombre</td>
                <td>@club.Direccion</td>
                <td>
                    <a asp-action="EditarClub" asp-route-id="@club.LugarId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="EliminarClub" asp-route-id="@club.LugarId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
