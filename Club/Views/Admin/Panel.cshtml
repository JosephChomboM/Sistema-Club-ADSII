@model IEnumerable<Club.Models.Lugar>

@{
    ViewData["Title"] = "Administrar Clubes";
}

<head>
    <!-- Vínculo correcto al archivo CSS -->
    <link rel="stylesheet" href="/css/clubsmart.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<div class="clubsmart-page">
    <div class="clubsmart-container">
        <h2 class="clubsmart-header">Administrar Clubes</h2>

        <a asp-action="CrearClub" class="clubsmart-btn clubsmart-btn-success mb-3">Crear Nuevo Club</a>

        <table class="clubsmart-table">
            <thead>
                <tr>
                    <th>Logo</th>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var club in Model)
                {
                    <tr>
                        <td>
                            <img src="@club.LogoUrl" alt="@club.Nombre" class="clubsmart-image-small" />
                        </td>
                        <td>@club.Nombre</td>
                        <td>@club.Direccion</td>
                        <td>
                            <a asp-action="EditarClub" asp-route-id="@club.LugarId" class="clubsmart-btn clubsmart-btn-warning clubsmart-btn-sm">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <form asp-action="ConfirmarEliminarClub" asp-route-id="@club.LugarId" method="post" style="display:inline;">
                                <button type="submit" class="clubsmart-btn clubsmart-btn-danger clubsmart-btn-sm">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
