@{
    ViewData["Title"] = "Acceso Administrador";
}

<h2>Acceso Administrador</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="LoginAdmin" method="post">
            <div class="form-group">
                <label for="email">Correo Electrónico</label>
                <input type="email" id="email" name="email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="contrasena">Contraseña</label>
                <input type="password" id="contrasena" name="contrasena" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
        </form>

        <!-- Mostrar mensajes de error -->
        @if (!ViewData.ModelState.IsValid)
        {
            foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p class="text-danger">@error.ErrorMessage</p>
            }
        }

        <!-- Mensaje de éxito -->
        @if (TempData["Mensaje"] != null)
        {
            <p class="text-success">@TempData["Mensaje"]</p>
        }
    </div>

    <div class="col-md-4">
        <h4>Opciones de Administración</h4>
        <a asp-action="CrearAdmin" asp-controller="Admin" class="btn btn-secondary">Crear Nuevo Admin</a>
    </div>

</div>
