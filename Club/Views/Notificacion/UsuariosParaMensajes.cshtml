@model IEnumerable<Club.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios para Mensajes";
}

<head>
    <!-- Vínculo correcto al archivo CSS -->
    <link rel="stylesheet" href="/css/clubsmart.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<div class="clubsmart-page">
    <div class="clubsmart-container">
        <h2 class="clubsmart-header">Usuarios para Mensajes</h2>

        <table class="clubsmart-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.UsuarioId</td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Email</td>
                        <td>
                            <a asp-action="CrearMensaje" asp-route-id="@usuario.UsuarioId"
                               class="clubsmart-btn clubsmart-btn-primary clubsmart-btn-sm">
                                <i class="bi bi-envelope"></i> Enviar Mensaje
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
