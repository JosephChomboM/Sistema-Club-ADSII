@model Club.Models.Notificacion

@{
    ViewData["Title"] = "Enviar Mensaje";
}

<head>
    <!-- Vínculo correcto al archivo CSS -->
    <link rel="stylesheet" href="/css/clubsmart.css" />
</head>

<div class="clubsmart-page">
    <div class="clubsmart-container">
        <h2 class="clubsmart-header">Enviar Mensaje a @Model.Usuario.Nombre</h2>

        <form asp-action="CrearMensaje" method="post" class="clubsmart-form">
            <input type="hidden" asp-for="UsuarioId" />

            <!-- Mensaje -->
            <div class="clubsmart-form-group">
                <label for="Mensaje" class="clubsmart-form-label">Mensaje</label>
                <textarea asp-for="Mensaje" class="clubsmart-form-control"></textarea>
                <span asp-validation-for="Mensaje" class="clubsmart-validation-error"></span>
            </div>

            <!-- Botón Enviar -->
            <button type="submit" class="clubsmart-btn clubsmart-btn-success">
                <i class="bi bi-send"></i> Enviar
            </button>
        </form>
    </div>
</div>
