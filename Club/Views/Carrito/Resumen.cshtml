@model List<dynamic>

@{
    ViewData["Title"] = "Resumen de Compra";
    var total = (double)ViewData["Total"];
}

<h2>Resumen de Compra</h2>

<table class="table">
    <thead>
        <tr>
            <th>Espacio</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NombreEspacio</td>
                <td>@((DateTime)item.FechaInicio)</td>
                <td>@((DateTime)item.FechaFin)</td>
                <td>@item.Precio.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-PE"))</td>
            </tr>
        }
    </tbody>
</table>

<h4>Total: @total.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-PE"))</h4>

<!-- Botón que abre el modal -->
<button id="btnPagar" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#stripeModal">
    Pagar
</button>

<!-- Modal de Bootstrap -->
<div class="modal fade" id="stripeModal" tabindex="-1" aria-labelledby="stripeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="stripeModalLabel">Procesar Pago</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="checkout">
                    <!-- Aquí se montará el formulario de pago embebido de Stripe -->
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script src="/js/checkout.js"></script>
